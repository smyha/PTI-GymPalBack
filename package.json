{
  "name": "gympal-backend",
  "version": "1.0.0",
  "description": "Backend API para GymPal - AplicaciÃ³n de fitness con IA",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:reset": "supabase db reset",
    "db:generate-types": "supabase gen types typescript --local > src/types/database.types.ts",
    "db:migrate": "supabase db push",
    "db:status": "supabase status",
    "docs:generate": "node scripts/generate-openapi.js",
    "docs:serve": "npm run dev",
    "docs:open": "open http://localhost:3000/reference"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@hono/swagger-ui": "^0.5.2",
    "@scalar/hono-api-reference": "^0.5.35",
    "@supabase/supabase-js": "^2.75.0",
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.5.0",
    "hono": "^4.7.9",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "tslib": "^2.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.22",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitest/ui": "^1.0.4",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "keywords": [
    "hono",
    "typescript",
    "nodejs",
    "backend",
    "api",
    "gympal",
    "pti-fib"
  ],
  "author": "GymPal Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
